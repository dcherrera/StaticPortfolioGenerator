{
  "name": "static-portfolio-generator",
  "version": "0.1.0",
  "description": "Markdown-driven static site generator for developer portfolios",
  "productName": "Static Portfolio Generator",
  "author": "dcherrera",
  "private": true,
  "scripts": {
    "dev": "npm run generate-manifest && npm run bundle-content && quasar dev",
    "build": "npm run fetch-readmes && npm run fetch-commits && npm run generate-manifest && npm run bundle-content && quasar build",
    "build:ssg": "npm run generate-manifest && npm run bundle-content && quasar ssg generate",
    "serve:ssg": "quasar ssg serve dist/ssg",
    "generate-manifest": "tsx scripts/generate-manifest.ts",
    "bundle-content": "tsx scripts/bundle-content.ts",
    "fetch-commits": "tsx scripts/fetch-commits.ts",
    "fetch-readmes": "tsx scripts/fetch-readmes.ts",
    "lint": "eslint --ext .js,.ts,.vue ./src",
    "format": "prettier --write \"src/**/*.{js,ts,vue,css,scss}\""
  },
  "dependencies": {
    "@quasar/extras": "^1.16.15",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "@octokit/rest": "^20.0.0",
    "pinia": "^2.2.0",
    "quasar": "^2.17.0",
    "shiki": "^1.22.0",
    "vue": "^3.5.0",
    "vue-router": "^4.4.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@quasar/app-vite": "^1.11.0",
    "quasar-app-extension-ssg": "^5.2.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.28.0",
    "prettier": "^3.3.0",
    "sass": "^1.80.0",
    "tsx": "^4.19.2",
    "typescript": "~5.6.0"
  },
  "engines": {
    "node": "^18 || ^20 || ^22",
    "npm": ">= 8"
  }
}
